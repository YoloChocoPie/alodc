            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.card-body -->
        <div class="card-footer clearfix">

            <a href="/Admin/Bill/Create" class="btn btn-sm btn-info float-left">Place New Order</a>

        </div>
        <!-- /.card-footer -->
    </div>
